<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<!-- ################### Applications Menu #################### -->

<menu id="apps-devel-menu" label="Development">
 <item label="Xterm" icon="/usr/share/icons/Papirus/32x32/apps/xterm-color_48x48.svg">
    <action name="Execute"><command>xterm</command></action>
 </item>

 <item label="MC FM" icon="/usr/share/icons/Papirus/32x32/apps/mc.svg">
    <action name="Execute"><command>xterm -e mc</command></action>
 </item>

 <item label="Geany" icon="/usr/share/icons/Papirus/32x32/apps/geany.svg">
    <action name="Execute"><command>geany</command></action>
 </item>
</menu>

<menu id="apps-net-menu" label="Internet">
  <item label="Firefox" icon="/usr/share/icons/Papirus/32x32/apps/firefox.svg">
    <action name="Execute"><command>firefox</command></action>
  </item>

  <item label="Nyxt" icon="/usr/share/icons/hicolor/32x32/apps/nyxt.png">
    <action name="Execute"><command>nyxt</command></action>
  </item>

  <item label="Vimb" icon="/usr/share/icons/Papirus/32x32/apps/browser.svg">
    <action name="Execute"><command>vimb</command></action>
  </item>
</menu>

<!-- ########################## Tools Menu ########################## -->

<menu id="brightness" label="Brightness">
  <item label="85%">
    <action name="Execute"><command>light -S 85</command></action>
  </item>
  <item label="65%">
    <action name="Execute"><command>light -S 65</command></action>
  </item>
  <item label="45%">
    <action name="Execute"><command>light -S 45</command></action>
  </item>
  <item label="25%">
    <action name="Execute"><command>light -S 25</command></action>
  </item>
  <item label="5%">
    <action name="Execute"><command>light -S 5</command></action>
  </item>
</menu>

<menu id="background" label="Background">
  <item label="Redraw" icon="/usr/share/icons/Papirus/32x32/apps/image-viewer.svg">
    <action name="Execute"><command>bash /usr/share/openbox/fehbg</command></action>
  </item>
  <item label="Choose" icon="/usr/share/icons/Papirus/32x32/places/folder-images.svg">
    <action name="Execute"><command>xterm -e vim /usr/share/openbox/fehbg</command></action>
  </item>
</menu>

<menu id="tools" label="Tools">
  <item label="Display" icon="/usr/share/icons/Papirus/32x32/apps/preferences-desktop-display.svg">
    <action name="Execute"><command>arandr</command></action>
  </item>

  <menu id="brightness" icon="/usr/share/icons/Papirus/32x32/apps/brightnesssettings.svg"/>

  <item label="Sound" icon="/usr/share/icons/Papirus/32x32/apps/multimedia-volume-control.svg">
    <action name="Execute"><command>pavucontrol</command></action>
  </item>

  <menu id="background" icon="/usr/share/icons/Papirus/32x32/apps/background.svg"/>
</menu>

<!-- #################### Workspace Menu ##################### -->

<menu id="workspaces" label="Workspace">
  <item label="Configurations" icon="/usr/share/icons/Papirus/32x32/apps/obconf.svg">
    <action name="Execute"><command>obconf</command></action>
  </item>

  <menu id="client-list-menu" icon="/usr/share/icons/Papirus/32x32/apps/workspace-switcher.svg"/>
</menu>

<!-- ####################### Main Menu List ####################### -->

<menu id="root-menu" label="Openbox">
  <separator label="Applications" />
  <menu id="apps-devel-menu" icon="/usr/share/icons/Papirus/32x32/apps/applications-development.svg"/>
  <menu id="apps-net-menu" icon="/usr/share/icons/Papirus/32x32/apps/applications-internet.svg"/>

  <separator label="Openbox" />
  <menu id="tools" icon="/usr/share/icons/Papirus/24x24/actions/tools.svg"/>
  <menu id="workspaces" icon="/usr/share/icons/Papirus/32x32/places/desktop.svg"/>
  <item label="Reload" icon="/usr/share/icons/Papirus/24x24/actions/reload.svg">
    <action name="Execute"><command>openbox --restart</command></action>
  </item>

  <separator label="Exit" />
  <item label="Logout" icon="/usr/share/icons/Papirus/32x32/apps/xfsm-logout.svg">
    <action name="Exit"><prompt>yes</prompt></action>
  </item>
  <item label="Suspend" icon="/usr/share/icons/Papirus/32x32/apps/xfsm-suspend.svg">
    <action name="Execute"><command>systemctl suspend</command></action>
  </item>
  <item label="Reboot" icon="/usr/share/icons/Papirus/32x32/apps/xfsm-reboot.svg">
    <action name="Execute"><command>systemctl reboot</command></action>
  </item>
  <item label="Shutdown" icon="/usr/share/icons/Papirus/32x32/apps/xfsm-shutdown.svg">
    <action name="Execute"><command>systemctl poweroff</command></action>
  </item>
</menu>

</openbox_menu>
