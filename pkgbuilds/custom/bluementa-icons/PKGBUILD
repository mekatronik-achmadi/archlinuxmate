pkgname=bluementa-icon-theme
pkgver=0.1
pkgrel=1
pkgdesc="Blue-Menta icon theme"
arch=('any')
url="https://www.gnome-look.org/p/1015867/"
license=('custom')
provides=('mist-icon-theme')
install=pkg.install
depends=('gtk-update-icon-cache' 'librsvg' 'mate-icon-theme')
options=(!strip !emptydirs !makeflags)

package() {
    # archived source:
    # https://gitlab.gnome.org/Archive/gnome-themes/-/tree/master/icon-themes/Mist/

	cd ../
	install -d $pkgdir/usr/share/icons/
	cp -rf ./bluementa $pkgdir/usr/share/icons/

	find "${pkgdir}" -type d -exec chmod 755 {} +
	find "${pkgdir}" -type f -exec chmod 644 {} +
}
